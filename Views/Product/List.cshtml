@model shopapp.ui.ViewModels.ProductViewModel

@{
    var popularClass = Model.Products.Count > 3 ? "popular" : "";
    var products = Model.Products;
    var CategoryName = Model.Category.Name;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.1/dist/css/bootstrap.min.css">
    <style>
        .popular{
            color: green;
            font-weight: 700;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    @await Html.PartialAsync("_navbar")

    <!-- jumbotron -->
    @await Html.PartialAsync("_header")



    <main>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="@popularClass">@CategoryName</h1>
                </div>
            </div>

    <div>            
                @if(@products.Count != 0)
                {
                    <div class="row">
                    @foreach(var p in @products)
                    {
                        <div class="col-md-3">
                            @await Html.PartialAsync("_product", p)
                        </div>
                    }
                    </div>
                }else{
                    @await Html.PartialAsync("_noproduct")
                }
            
    </div>
</div>
</main>
</body>
</html>