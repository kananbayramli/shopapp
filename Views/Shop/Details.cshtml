@model ProductDetailModel

<div class="row">
    <div class="col-md-3">
        <img src="~/img/@Model.Product.ImageUrl" class="img-fluid">
    </div>
    <div class="col-md-9">
            <h2 class="mb-3">@Model.Product.Name</h5><hr>

            @foreach(var item in Model.Categories)
            {
                <a asp-controller="shop" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a>   
            }

            <div class="mb-3">
               <h4 class="text-secondary mb-3"><i class="fas fa-dollar-sign"></i> @Model.Product.Price</h4>

            <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display:inline;" class="form-inline">
                <input type="hidden" name="productId" value="@Model.Product.ProductId">

                <div class="input-group mb-3">
                    <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" style="width: 100px;">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-cart-plus"></i> Add To Cart
                        </button>
                    </div>
                </div>
            </form>
            </div>
    </div>
</div>


<div class="row">
<div class="col-md-12 p-5">
    <p class="p-3">@Html.Raw(Model.Product.Description)</p>
</div>
</div>


