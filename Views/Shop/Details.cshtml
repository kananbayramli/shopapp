@model Product

<div class="row">
    <div class="col-md-3">
        <img src="~/img/@Model.ImageUrl" class="img-fluid">
    </div>
    <div class="col-md-9">
            <h2 class="mb-3">@Model.Name</h5><hr>
            <a href="#" class="btn btn-link p-0 mb-3">Telefon | Electronic</a>   
            <div class="mb-3">
               <h4 class="text-secondary mb-3"><i class="fas fa-dollar-sign"></i> @Model.Price</h4>
               <button type="submit" class="btn btn-primary">Add to cart</button>
            </div>
    </div>
</div>


<div class="row">
<div class="col-md-12">
    <p class="p-3">@Model.Description</p>
</div>
</div>


